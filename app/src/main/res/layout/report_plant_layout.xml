<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#66EDD892">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
        android:id="@+id/reportImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        android:onClick="imageViewOnClick"
        android:src="@drawable/camera_bold"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <Button
        android:id="@+id/helpIdentifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/button_rounded_corners"
        android:onClick="helpIdentifyOnClick"
        android:padding="10dp"
        android:text="@string/not_sure_plant"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="8pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whatPlantText"></Button>

    <TextView
        android:id="@+id/whatPlantText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily='sans-serif-condensed'
        android:padding="10dp"
        android:text="@string/what_plant"
        android:textColor="#000000"
        android:textSize="12pt"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportImageView"></TextView>

    <Button
        android:id="@+id/reportPlantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_rounded_corners"
        android:onClick="reportPlantOnClick"
        android:padding="10dp"
        android:text="@string/report_plant"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportDescEditText"></Button>

    <EditText
        android:id="@+id/reportPlantEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="@string/user_input_plant"
        android:imeOptions="actionNext"
        android:inputType="text|textAutoCorrect"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whatPlantText"></EditText>

    <TextView
        android:id="@+id/plantDescText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily='sans-serif-condensed'
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/plant_description"
        android:textColor="#000000"
        android:textSize="12pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpIdentifyButton"></TextView>

    <EditText
        android:id="@+id/reportDescEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:hint="@string/user_input_desc"
        android:imeOptions="actionNext"
        android:inputType="text|textAutoCorrect"
        android:minHeight="100dp"
        android:textColor="#000000"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plantDescText"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily='sans-serif-condensed'
        android:padding="10dp"
        android:text="@string/photograph_plant"
        android:textColor="#000000"
        android:textSize="6pt"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportImageView"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>